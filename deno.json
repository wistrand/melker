{
  "engines": {
    "deno": ">=2.5.0"
  },
  "description": "A Deno library for creating rich Terminal UI interfaces with flexbox-based layouts",
  "tasks": {
    "test": "deno test --allow-read --allow-env --allow-write --allow-run --allow-net=localhost --unstable-bundle",
    "test:watch": "deno test --allow-read --allow-env --allow-write --allow-run --allow-net=localhost --unstable-bundle --watch",
    "test:coverage": "deno test --allow-read --allow-env --allow-write --allow-run --allow-net=localhost --unstable-bundle --coverage=coverage/",
    "fmt": "deno fmt",
    "lint-real" : "deno lint --rules-exclude=no-inner-declarations,prefer-const,require-await,no-explicit-any,no-unused-vars src",
    "lint-all": "deno lint src",
    "check": "deno check src/**/*.ts benchmarks/**/*.ts",
    "check-ts-examples": "deno check examples/**/*.ts",
    "skill:zip": "cd skills/creating-melker-apps && zip -r ../../docs/skill-creating-melker-apps.zip SKILL.md references/ && echo 'Created skill-creating-melker-apps.zip'"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}