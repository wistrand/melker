{
  "name": "@melker/core",
  "version": "0.1.0",
  "engines": {
    "deno": ">=2.1.0"
  },
  "description": "A Deno library for creating rich Terminal UI interfaces with flexbox-based layouts",
  "exports": "./mod.ts",
  "tasks": {
    "test": "deno test --allow-read --allow-env --allow-write --allow-run --unstable-bundle",
    "test:watch": "deno test --allow-read --allow-env --allow-write --watch",
    "test:coverage": "deno test --allow-read --allow-env --allow-write --coverage=coverage/",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/**/*.ts",
    "check-ts-examples": "deno check examples/**/*.ts",
    "skill:zip": "cd skills/creating-melker-apps && zip -r ../../docs/skill-creating-melker-apps.zip SKILL.md COMPONENTS.md EXAMPLES.md TYPES.md TROUBLESHOOTING.md && echo 'Created creating-melker-apps.zip'"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}