<melker>
<policy>
{
  "name": "Overflow Demo",
  "description": "Demonstrates overflow-x and overflow-y axis-specific scrolling",
  "permissions": {}
}
</policy>

<style>
.panel {
  border: thin;
  margin-right: 1;
  flex: 1;
}

.panel-title {
  font-weight: bold;
  padding-left: 1;
}
</style>

<container style="display: flex; flex-direction: column; width: fill; height: fill">
  <text style="font-weight: bold; text-align: center; padding-bottom: 1">
    Overflow Demo - arrow keys or mouse wheel to scroll
  </text>

  <container style="display: flex; flex-direction: row; flex: 1">

    <!-- Vertical only -->
    <container class="panel" style="overflow-y: scroll; overflow-x: hidden">
      <text class="panel-title">overflow-y: scroll</text>
      <text> Line 1 - Vertical only</text>
      <text> Line 2</text>
      <text> Line 3</text>
      <text> Line 4</text>
      <text> Line 5</text>
      <text> Line 6</text>
      <text> Line 7</text>
