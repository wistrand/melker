<melker>
  <container id="root" style="width: fill; height: fill; border: thin; padding: 1; display: flex; flex-direction: column; align-items: center;">
    <text style="font-weight: bold; margin-bottom: 1;">
      Image Test
    </text>

    <container id="image-wrap" style="width: fill; height: fill; display: flex; align-items: center; justify-content: center;">
      <canvas
        id="imageCanvas"
        width="60"
        height="60"
        src="${argv[1]:-examples/melker/test_image.png}"
      />
    </container>

  </container>
</melker>
