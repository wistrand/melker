<container style="width: fill; height: fill; display: flex; flex-direction: column;">
  <!-- Menu Bar with Simple Menus -->
  <menu-bar id="main-menu-bar">
    <!-- File Menu -->
    <menu title="File" position="bottom">
      <menu-item title="New" shortcut="Ctrl+N"
        onClick="
          $melker.logger?.info('*** new ***');
          const outputEl = $melker.getElementById('output');
          if (outputEl) {
            outputEl.props.text = 'ðŸ“„ New file created!';
            $melker.render();
          }
        "
      />
      <menu-item title="Open" shortcut="Ctrl+O"
        onClick="
          const outputEl = $melker.getElementById('output');
          if (outputEl) {
            outputEl.props.text = 'ðŸ“‚ Open file dialog...';
            $melker.render();
          }
        "
      />
      <menu-item title="Save" shortcut="Ctrl+S"
        onClick="
          const outputEl = $melker.getElementById('output');
          if (outputEl) {
            outputEl.props.text = 'ðŸ’¾ File saved successfully!';
            $melker.render();
          }
        "
      />
      <menu-separator />
      <menu-item title="Exit" shortcut="Ctrl+Q"
        onClick="$melker.exit();"
      />
    </menu>

    <!-- Edit Menu -->
    <menu title="Edit" position="bottom">
      <menu-item title="Undo" shortcut="Ctrl+Z"
        onClick="
          const outputEl = $melker.getElementById('output');
          if (outputEl) {
            outputEl.props.text = 'â†¶ Undo action performed';
            $melker.render();
          }
        "
      />
      <menu-item title="Redo" shortcut="Ctrl+Y" disabled="true" />
      <menu-separator />
      <menu-item title="Cut" shortcut="Ctrl+X" />
      <menu-item title="Copy" shortcut="Ctrl+C" />
      <menu-item title="Paste" shortcut="Ctrl+V" />
      <menu-separator />
      <menu-item title="Find" shortcut="Ctrl+F" />
      <menu-item title="Replace" shortcut="Ctrl+H" />
    </menu>

    <!-- View Menu -->
    <menu title="View" position="bottom">
      <menu-item title="Fullscreen" shortcut="F11"
        onClick="
          const outputEl = $melker.getElementById('output');
          if (outputEl) {
            outputEl.props.text = 'ðŸ–¥ï¸ Fullscreen mode toggled';
            $melker.render();
          }
        "
      />
      <menu-item title="Show Toolbar" checked="true" />
      <menu-separator />
      <menu-item title="Zoom In" shortcut="Ctrl++" />
      <menu-item title="Zoom Out" shortcut="Ctrl+-" />
      <menu-item title="Reset Zoom" shortcut="Ctrl+0" />
    </menu>

    <!-- Help Menu -->
    <menu title="Help" position="bottom">
      <menu-item title="Documentation" shortcut="F1"
        onClick="
          const outputEl = $melker.getElementById('output');
          if (outputEl) {
            outputEl.props.text = 'ðŸ“– Opening documentation...';
            $melker.render();
          }
        "
      />
      <menu-item title="Keyboard Shortcuts" />
      <menu-separator />
      <menu-item title="About"
        onClick="
          const outputEl = $melker.getElementById('output');
          if (outputEl) {
            outputEl.props.text = 'â„¹ï¸ Melker Terminal UI Library v1.0';
            $melker.render();
          }
        "
      />
    </menu>
  </menu-bar>

  <!-- Main Content Area -->
