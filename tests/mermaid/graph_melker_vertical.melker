<melker>
<policy>
{
  "name": "Graph: tests/mermaid/graph_melker_vertical.mmd"
}
</policy>

<style>
.graph {
  width: fill;
  height: fill;
  padding: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 5;
  align-items: flex-start;
  align-content: flex-start;
  flex-shrink: 0;
}
.graph-row { flex-direction: row; }
.graph-col { flex-direction: column; }

.subgraph {
  border: thin;
  padding: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 4;
}
.subgraph-row { flex-direction: row; }
.subgraph-col { flex-direction: column; }

.node {
  border: thin;
  padding: 0 1;
  flex-shrink: 0;
}
.node-rounded { border: rounded; }
.node-diamond { border: double; }
.node-hexagon { border: thick; }
</style>

<container class="graph graph-col" scrollable="true">
  <container id="graph-node-Logo" class="node">
    <img src="../../media/melker-128.png" width="16" height="8"/>
  </container>
  <container id="graph-node-Title" class="node">
    <text style="font-weight: bold; font-size: large">Melker TUI</text>
  </container>
  <container id="graph-node-Actions" class="node">
    <container style="flex-direction: column; gap: 1">
      <button label="New Project"/>
      <button label="Open File"/>
      <button label="Settings"/>
    </container>
  </container>

  <!-- Connectors -->
  <connector from="graph-node-Logo" to="graph-node-Title" arrow="end" />
  <connector from="graph-node-Title" to="graph-node-Actions" arrow="end" />
</container>
</melker>