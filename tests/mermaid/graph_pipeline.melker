<melker>
<policy>
{
  "name": "Graph: tests/mermaid/graph_pipeline.mmd"
}
</policy>

<style>
.graph {
  width: fill;
  height: fill;
  padding: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 5;
  align-items: flex-start;
  align-content: flex-start;
  flex-shrink: 0;
}
.graph-row { flex-direction: row; }
.graph-col { flex-direction: column; }

.subgraph {
  border: thin;
  padding: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 4;
}
.subgraph-row { flex-direction: row; }
.subgraph-col { flex-direction: column; }

.node {
  border: thin;
  padding: 0 1;
  flex-shrink: 0;
}
.node-rounded { border: rounded; }
.node-diamond { border: double; }
.node-hexagon { border: thick; }
</style>

<container class="graph graph-col" style="overflow: scroll">
  <!-- Subgraph: Ingestion -->
  <container id="graph-subgraph-Ingestion" class="subgraph subgraph-row" style="border-title: Ingestion">
    <container id="graph-node-A" class="node">
      <text>Data Source</text>
    </container>
    <container id="graph-node-B" class="node">
      <text>ETL Process</text>
    </container>
  </container>

  <!-- Subgraph: Processing -->
  <container id="graph-subgraph-Processing" class="subgraph subgraph-row" style="border-title: Processing">
    <container id="graph-node-C" class="node">
      <text>Transform</text>
    </container>
    <container id="graph-node-D" class="node">
      <text>Validate</text>
    </container>
    <container id="graph-node-E" class="node">
      <text>Enrich</text>
    </container>
  </container>

  <!-- Subgraph: Storage -->
  <container id="graph-subgraph-Storage" class="subgraph subgraph-row" style="border-title: Storage">
    <container id="graph-node-F" class="node">
      <text>Data Lake</text>
    </container>
    <container id="graph-node-G" class="node">
      <text>Data Warehouse</text>
    </container>
  </container>

  <!-- Subgraph: Analytics -->
  <container id="graph-subgraph-Analytics" class="subgraph subgraph-row" style="border-title: Analytics">
    <container id="graph-node-J" class="node">
      <text>ML Models</text>
    </container>
    <container id="graph-node-H" class="node">
      <text>Reports</text>
    </container>
    <container id="graph-node-I" class="node">
      <text>Dashboards</text>
    </container>
  </container>


  <!-- Connectors -->
  <connector from="graph-node-A" to="graph-node-B" arrow="end" />
  <connector from="graph-node-C" to="graph-node-D" arrow="end" />
  <connector from="graph-node-D" to="graph-node-E" arrow="end" />
  <connector from="graph-node-B" to="graph-node-C" arrow="end" />
  <connector from="graph-node-E" to="graph-node-F" arrow="end" />
  <connector from="graph-node-E" to="graph-node-G" arrow="end" />
  <connector from="graph-node-F" to="graph-node-J" arrow="end" />
  <connector from="graph-node-G" to="graph-node-H" arrow="end" />
  <connector from="graph-node-G" to="graph-node-I" arrow="end" />
</container>
</melker>