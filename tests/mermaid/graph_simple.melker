<melker>
<policy>
{
  "name": "Graph: tests/mermaid/graph_simple.mmd"
}
</policy>

<style>
.graph {
  width: fill;
  height: fill;
  padding: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 5;
  align-items: flex-start;
  align-content: flex-start;
  flex-shrink: 0;
}
.graph-row { flex-direction: row; }
.graph-col { flex-direction: column; }

.subgraph {
  border: thin;
  padding: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 4;
}
.subgraph-row { flex-direction: row; }
.subgraph-col { flex-direction: column; }

.node {
  border: thin;
  padding: 0 1;
  flex-shrink: 0;
}
.node-rounded { border: rounded; }
.node-diamond { border: double; }
.node-hexagon { border: thick; }
</style>

<container class="graph graph-row" scrollable="true">
  <container id="graph-node-A" class="node">
    <text>Start</text>
  </container>
  <container id="graph-node-B" class="node">
    <text>End</text>
  </container>

  <!-- Connectors -->
  <connector from="graph-node-A" to="graph-node-B" arrow="end" />
</container>
</melker>