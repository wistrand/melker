<melker>
<policy>
{
  "name": "Graph: tests/mermaid/graph_subgraphs.mmd"
}
</policy>

<style>
.graph {
  width: fill;
  height: fill;
  padding: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 5;
  align-items: flex-start;
  align-content: flex-start;
  flex-shrink: 0;
}
.graph-row { flex-direction: row; }
.graph-col { flex-direction: column; }

.subgraph {
  border: thin;
  padding: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 4;
}
.subgraph-row { flex-direction: row; }
.subgraph-col { flex-direction: column; }

.node {
  border: thin;
  padding: 0 1;
  flex-shrink: 0;
}
.node-rounded { border: rounded; }
.node-diamond { border: double; }
.node-hexagon { border: thick; }
</style>

<container class="graph graph-row" style="overflow: scroll">
  <!-- Subgraph: Client -->
  <container id="graph-subgraph-Client" class="subgraph subgraph-col" style="border-title: Client">
    <container id="graph-node-A" class="node">
      <text>Browser</text>
    </container>
    <container id="graph-node-B" class="node">
      <text>App</text>
    </container>
  </container>

  <!-- Subgraph: Server -->
  <container id="graph-subgraph-Server" class="subgraph subgraph-col" style="border-title: Server">
    <container id="graph-node-C" class="node">
      <text>API</text>
    </container>
    <container id="graph-node-D" class="node">
      <text>DB</text>
    </container>
  </container>


  <!-- Connectors -->
  <connector from="graph-node-A" to="graph-node-B" arrow="end" />
  <connector from="graph-node-C" to="graph-node-D" arrow="end" />
  <connector from="graph-node-B" to="graph-node-C" arrow="end" />
</container>
</melker>