<!-- Test 2: Nested flex - mimics class diagram structure -->
<container style="display: flex; flex-direction: column; padding: 1; gap: 2">
  <!-- Row container -->
  <container style="display: flex; flex-direction: row; gap: 2">
    <!-- Box that sizes to content (like class-box) -->
    <container style="display: flex; flex-direction: column; align-items: stretch; border: thin; padding: 0 1">
      <text style="text-align: center; font-weight: bold">ClassName</text>
      <separator />
      <text>+attribute: Type</text>
      <separator />
      <text>+method()</text>
    </container>
    <!-- Another box -->
    <container style="display: flex; flex-direction: column; align-items: stretch; border: thin; padding: 0 1">
      <text style="text-align: center; font-weight: bold">Another</text>
      <separator />
      <text>+field</text>
    </container>
  </container>
</container>
</melker>
